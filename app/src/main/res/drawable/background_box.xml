<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the shape, which in this case is a rectangle (default) -->
    <solid android:color="#FFFFFF"/> <!-- White background; change the color as needed -->
    <corners android:radius="8dp"/> <!-- Rounded corners -->
    <stroke android:width="1dp" android:color="#DDDDDD"/> <!-- Grey border -->
    <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/> <!-- Padding inside the shape -->
</shape>
